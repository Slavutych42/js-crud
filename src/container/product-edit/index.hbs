<div class="product-edit-container">
  <h1>Редагування товару</h1>
  <form method="POST" action="/product-edit">
    <input type="hidden" name="productId" value="{{data.product.id}}">
    <label for="name">Назва товару:</label>
    <input type="text" id="name" name="name" value="{{data.name}}" required>
    <label for="price">Ціна товару:</label>
    <input type="number" id="price" name="price" value="{{data.price}}" required>
    <label for="description">Опис товару:</label>
    <textarea id="description" name="description" required>{{data.description}}</textarea>
    <button type="submit">Зберегти оновлення</button>
  </form>
</div>


